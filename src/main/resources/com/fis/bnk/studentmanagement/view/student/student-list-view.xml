<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
  xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
  title="msg://studentListView.title"
  focusComponent="studentsDataGrid">
  <data>
    <collection id="studentsDc"
      class="com.fis.bnk.studentmanagement.entity.Student">
      <fetchPlan extends="_base">
        <property name="subjects" fetchPlan="_base"/>
        <property name="studentClass" fetchPlan="_base"/>
      </fetchPlan>
      <loader id="studentsDl">
        <query>
          <![CDATA[select e from Student e ]]>
          <condition>
            <and>
              <c:jpql>
                <c:where>LOWER(e.code) like :code</c:where>
              </c:jpql>
              <c:jpql>
                <c:where>LOWER(e.name) like :name</c:where>
              </c:jpql>
              <c:jpql>
                <c:where>LOWER(e.address) like :address</c:where>
              </c:jpql>
              <c:jpql>
                <c:where>LOWER(e.phoneNumber) like :phoneNumber</c:where>
              </c:jpql>
            </and>
          </condition>
        </query>
      </loader>
    </collection>
  </data>
  <facets>
    <dataLoadCoordinator auto="true"/>
    <urlQueryParameters>
      <pagination component="pagination"/>
    </urlQueryParameters>
  </facets>
  <actions>
    <action id="selectAction" type="lookup_select"/>
    <action id="discardAction" type="lookup_discard"/>
  </actions>
  <layout classNames="form-container">
    <!-- Add search fields for Code, Name, Address, Phone Number -->
    <hbox spacing="true" classNames="form-container">
      <textField id="codeField" placeholder="Search by code" classNames="text-field"/>
      <textField id="nameField" placeholder="Search by name" classNames="text-field"/>
      <textField id="addressField" placeholder="Search by address" classNames="text-field"/>
      <textField id="phoneNumberField" placeholder="Search by phone number" classNames="text-field"/>
      <button id="searchBtn" text="Search" icon="SEARCH"/>
    </hbox>

    <!-- Action buttons -->
    <hbox id="buttonsPanel" classNames="buttons-panel">
      <button id="createBtn" action="studentsDataGrid.create"/>
      <button id="editBtn" action="studentsDataGrid.edit"/>
      <button id="removeBtn" action="studentsDataGrid.remove"/>
      <simplePagination id="pagination" dataLoader="studentsDl"/>
    </hbox>

    <!-- DataGrid -->
    <dataGrid id="studentsDataGrid"
      classNames="data-grid"
      width="100%"
      minHeight="20em"
      dataContainer="studentsDc"
      columnReorderingAllowed="true">
      <actions>
        <action id="create" type="list_create"/>
        <action id="edit" type="list_edit"/>
        <action id="remove" type="list_remove"/>
      </actions>
      <columns resizable="true">
        <column property="code"/>
        <column property="name"/>
        <column property="birthDate"/>
        <column property="address"/>
        <column property="phoneNumber"/>
        <column property="studentClass"/>
      </columns>
    </dataGrid>

    <!-- Lookup actions -->
    <hbox id="lookupActions" visible="false">
      <button id="selectBtn" action="selectAction"/>
      <button id="discardBtn" action="discardAction"/>
    </hbox>
  </layout>
</view>
