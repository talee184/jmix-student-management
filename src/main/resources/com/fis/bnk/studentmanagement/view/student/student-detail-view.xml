<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
  title="msg://studentDetailView.title"
  focusComponent="form">
  <data>
    <collection id="subjectDc" class="com.fis.bnk.studentmanagement.entity.Subject">
      <loader id="subjectDl" readOnly="true">
        <query>
          <![CDATA[select s from Subject s order by s.name asc]]>
        </query>
      </loader>
      <fetchPlan extends="_base"/>
    </collection>
    <instance id="studentDc"
      class="com.fis.bnk.studentmanagement.entity.Student">
      <fetchPlan extends="_base"/>
      <loader id="studentDl"/>
    </instance>
    <!-- Data container cho bảng điểm -->
    <collection id="gradeDc" class="com.fis.bnk.studentmanagement.entity.Grade">
      <loader id="gradeDl">
        <query>
          <![CDATA[select g from Grade g where g.student = :student]]>
        </query>
      </loader>
      <fetchPlan extends="_base"/>
    </collection>
  </data>
  <facets>
    <dataLoadCoordinator auto="true"/>
  </facets>
  <actions>
    <action id="saveAction" type="detail_saveClose"/>
    <action id="closeAction" type="detail_close"/>
  </actions>
  <layout>
    <formLayout id="form" dataContainer="studentDc">
      <textField id="codeField" property="code"/>
      <textField id="nameField" property="name"/>
      <datePicker id="birthDateField" property="birthDate"/>
      <textField id="addressField" property="address"/>
      <textField id="phoneNumberField" property="phoneNumber"/>
    </formLayout>

    <hbox id="detailActions">
      <button id="saveAndCloseBtn" action="saveAction"/>
      <button id="closeBtn" action="closeAction"/>
      <button id="addGradeBtn" text="Nhập điểm" icon="PLUS"/>
    </hbox>

    <vbox>
      <label value="Bang diem" styleName="h2"/>

      <!-- Hiển thị bảng điểm -->
      <dataGrid id="gradesTable" dataContainer="gradeDc">
        <columns>
          <column property="subject.name" editable="true"/>
          <column property="score" editable="true"/>
        </columns>
        <!-- Action buttons (Edit and Delete) for the DataGrid -->
        <actions>
          <action id="editAction" text="Edit" icon="PENCIL"/>
          <action id="removeAction" text="Delete" icon="TRASH"/>
        </actions>
      </dataGrid>
      <!-- Action buttons outside the DataGrid for editing and removing rows -->
      <hbox spacing="true">
        <button id="editBtn" action="gradesTable.editAction" text="Edit Selected" icon="PENCIL"/>
        <button id="removeBtn" action="gradesTable.removeAction" text="Delete Selected" icon="TRASH"/>
<!--        <button id="saveBtn" text="Save Changes" icon="CHECK" themeNames="success"/>-->
        <button id="cancelBtn" text="Cancel Changes" icon="CLOSE" themeNames="error"/>
      </hbox>
    </vbox>
  </layout>
</view>
