<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
  title="msg://teacherDetailView.title"
  focusComponent="form">
  <data>
    <instance id="teacherDc"
      class="com.fis.bnk.studentmanagement.entity.Teacher">
      <fetchPlan extends="_base">
        <property name="school" fetchPlan="_base"/>
      </fetchPlan>
      <loader id="teacherDl"/>
    </instance>
  </data>
  <facets>
    <dataLoadCoordinator auto="true"/>
  </facets>
  <actions>
    <action id="saveAction" type="detail_saveClose"/>
    <action id="closeAction" type="detail_close"/>
  </actions>
  <layout>
    <formLayout id="form" dataContainer="teacherDc">
      <textField id="nameField" property="name"/>
      <textField id="ageField" property="age"/>
      <textField id="addressField" property="address"/>
      <textField id="phoneNumberField" property="phoneNumber"/>
      <entityPicker id="schoolField" property="school">
        <actions>
          <action id="entityLookup" type="entity_lookup"/>
          <action id="entityClear" type="entity_clear"/>
        </actions>
      </entityPicker>
    </formLayout>
    <hbox id="detailActions">
      <button id="saveAndCloseBtn" action="saveAction"/>
      <button id="closeBtn" action="closeAction"/>
    </hbox>
  </layout>
</view>
